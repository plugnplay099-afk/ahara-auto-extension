{
  "manifest_version": 3,
  "name": "Ahara Mother Extension",
  "version": "3.0",
  "update_url": "https://raw.githubusercontent.com/YOUR_USERNAME/YOUR_REPO/main/updates.xml",
  "description": "All-in-one Ahara Automation (Login + BIO/IRIS + Issue Module)",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3499/*",
    "https://ahara.karnataka.gov.in/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://ahara.karnataka.gov.in/*"
      ],
      "js": [
        "content.js",
        "modules/login.js",
        "modules/mainmenu.js",
        "modules/issue.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Ahara Auto"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
